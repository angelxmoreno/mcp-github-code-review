{
    "name": "mcp-github-code-review",
    "version": "0.0.0",
    "description": "MCP server that automates code review workflows with GitHub, enabling AI agents to handle PR comment triage and responses.",
    "type": "module",
    "module": "src/index.ts",
    "private": false,
    "license": "MIT",
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "scripts": {
        "prepare": "lefthook install",
        "test": "bun test",
        "test:unit": "bun test tests/unit",
        "test:integration": "bun test tests/integration",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "lint:commits": "commitlint --from=origin/main --to=HEAD --verbose",
        "typecheck": "tsc --noEmit",
        "check": "bun run lint:fix && bun run typecheck && bun run test",
        "dev": "bun --hot src/index.ts",
        "start": "bun src/index.ts",
        "cli": "bun src/cli.ts",
        "dev:cli": "bun --watch src/cli.ts",
        "migration:create": "bash scripts/create-migration.sh",
        "migration:generate": "bash scripts/generate-migration.sh",
        "migration:show": "bun --bun typeorm migration:show -d src/database/dataSource.ts",
        "migration:run": "bun --bun typeorm migration:run -d src/database/dataSource.ts",
        "migration:revert": "bun --bun typeorm migration:revert -d src/database/dataSource.ts"
    },
    "dependencies": {
        "get-object-value": "^0.8.1",
        "hono": "^4.9.4",
        "inflection": "^3.0.2",
        "octokit": "^5.0.3",
        "pino": "^9.9.0",
        "pino-pretty": "^13.1.1",
        "reflect-metadata": "^0.2.2",
        "safe-stable-stringify": "^2.5.0",
        "sqlite3": "^5.1.7",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.26",
        "typeorm-pino-logger": "^0.1.0",
        "zod": "^4.1.3"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@types/bun": "^1.2.20",
        "lefthook": "^1.12.3",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {}
}
